#include <stdio.h>

int main() {
    int n, i;
    printf("Enter the number of elements: ");
int main()
{
    int arr[100], even[100], odd[100];
    int i, j = 0, k = 0, n;

    printf("Enter size of array: ");
    scanf("%d", &n);
    int arr[n];
    printf("Enter the elements:\n");
    for (i = 0; i < n; i++) {

    printf("Enter array elements: ");
    for (i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }
    int largest1 = arr[0], largest2 = arr[0];
    for (i = 1; i < n; i++) {
        if (arr[i] > largest1) {
            largest2 = largest1;
            largest1 = arr[i];

    for (i = 0; i < n; i++)
    {
        if (arr[i] % 2 == 0)
        {
            even[j] = arr[i];
            j++;
        }
        else if (arr[i] > largest2 && arr[i] != largest1) {
            largest2 = arr[i];
        else
        {
            odd[k] = arr[i];
            k++;
        }
    }
    printf("The largest two elements are: %d and %d\n", largest1, largest2);


    printf("Even elements of the array: ");
    for (i = 0; i < j; i++)
    {
        printf("%d ", even[i]);
    }


    printf("\nOdd elements of the array: ");
    for (i = 0; i < k; i++)
    {
        printf("%d ", odd[i]);
    }

    return 0;
}
