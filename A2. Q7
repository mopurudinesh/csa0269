#include <stdio.h>

int main() {
    int n, i;
    printf("Enter the number of elements: ");
int main()
{
    int arr[100], rev[100];
    int i, j, n, flag = 1;

    printf("Enter size of array: ");
    scanf("%d", &n);
    int arr[n];
    printf("Enter the elements:\n");
    for (i = 0; i < n; i++) {

    printf("Enter array elements: ");
    for (i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }
    int largest1 = arr[0], largest2 = arr[0];
    for (i = 1; i < n; i++) {
        if (arr[i] > largest1) {
            largest2 = largest1;
            largest1 = arr[i];
        }
        else if (arr[i] > largest2 && arr[i] != largest1) {
            largest2 = arr[i];


    for (i = n - 1, j = 0; i >= 0; i--, j++)
    {
        rev[j] = arr[i];
    }


    for (i = 0; i < n; i++)
    {
        if (arr[i] != rev[i])
        {
            flag = 0;
            break;
        }
    }
    printf("The largest two elements are: %d and %d\n", largest1, largest2);

    if (flag == 1)
    {
        printf("The array is a palindrome array\n");
    }
    else
    {
        printf("The array is not a palindrome array\n");
    }

    return 0;
}
